
<main id="appMain"  ng-app="myModule">
    <div id="minder" ng-controller="MinderController">
        <kityminder-editor on-init="initEditor(editor, minder)" ng-keyup="saveMinderData($event)"></kityminder-editor>
    </div>

    <div id="blogsContainer" ng-controller="BlogController">
        <div class="blog-container" ng-repeat="blog in blogs">
            <div class="blog-editor" style="display:none">
                <textarea class="form-control" ng-keyup="updateBlog($event)">\{{blog.content}}</textarea>
            </div>
            <div class="blog-viewer" id="\{{blog.id}}">
                <article ng-bind-html="blog.html"></article>
                <div class="blog-btns">
                    <button class="blog-change btn btn-info" ng-click="blogEditor($event)">修改</button>
                    <button class="blog-delete btn btn-danger" ng-click="deleteBlog($event, $parent)">删除</button>
                </div>
            </div>
        </div>
        <h1 class="editor-title" ng-click="createBlog($event)">新建</h1>
    </div>
</main>

